@model RestaurantRaterMVC.Models.Rating.RatingCreate
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} @* This is JS validation scripts*@
}

@{
    string title = "Rate a Restaurant";
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="RestaurantId" class="control-label"></label>
                @Html.DropDownListFor(r => r.RestaurantId, Model.RestaurantOptions)
                @* <input asp-for="RestaurantId" class="form-control" /> *@
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rate!" class="btn btn-primary" />
            </div>
        </form>    
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>